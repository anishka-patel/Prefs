# Exports and global ENV variables
export EDITOR='/usr/bin/vim'
export VISUAL='/usr/bin/nvim'
# Seting terminal editing to vi mode
set -o vi
# Seting various alises
alias vi=vim
alias ls='ls --color=auto'
alias la='ls -Ah --color=auto'
alias ll='ls -Alh'
alias vipython='ipython --TerminalInteractiveShell.editing_mode=vi'
